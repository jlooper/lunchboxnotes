
<%= render "shared/error_messages", :target => @user %>

  <%= form_for(@user) do |f| %>
  	
  	<div class="field">
  		<%= f.label :name %><br />
  		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
  		<%= f.label :password, f.object.new_record? ? nil : "Change password" %><br />
  		<%= f.password_field :password %>
	</div>
	<div class="field">
 		<%= f.label :password_confirmation %><br />
  		<%= f.password_field :password_confirmation %>
	</div>

  	<div class="actions">
     	<%= f.submit "Submit" %>
  	</div>

  <br/>
<% end %>
